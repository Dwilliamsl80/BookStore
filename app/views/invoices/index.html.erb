section {
    padding-left: 90px;
}
</style>
<section>



<h1>Your Past Order History</h1>
<table>
  <tbody>
    <th>Order Date</th>
    <th>Order Number</th>
    <th>Order Total</th>
    <% @invoices.each do |invoice| %>
      <tr>
         <td><%= invoice.order.orderDate %></td>
         <td><%= link_to "#{invoice.order.id}", order_path(invoice.order)%></td>
         <td>$<%= invoice.order.subtotal%></td>
      </tr>
    <% end %>
  </tbody>
</table>
