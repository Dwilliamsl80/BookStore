
              <h4><%= book.stock %> copies in stock</h4>
              <p class="card-text">
              <%= form_for order_item, remote: true do |f| %>
                <h5 class="text-right">Book Price: <span style="color: green"><%= number_to_currency book.price %></span></h5>
                <%= f.number_field :bookQuantity, value: 1, class: "form-control", min: 1 %>
                <%= f.hidden_field :book_id, value: book.id %>
                <%= link_to 'Read More', book_path(book), class:"btn btn-primary"%>
                <%= f.submit "Add to Cart", class:"btn btn-primary" %>
              <% end %>
              </p>