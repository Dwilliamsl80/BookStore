<%= image_tag @book.cover.url(:medium) %>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>


<p>
  <strong>Categories:</strong>
  <%= @book.categories.collect(&:name).join(", ") %>
  
</p>

<p>
  <strong>Authors:</strong>
  <%= @book.authors.pluck(:first_name, :last_name).join(", ") %>
  
</p>

<p>
  <strong>Publishers:</strong>
  <%= @book.publishers.collect(&:name).join(", ") %>
  
</p>

<p>
  <strong>Pages:</strong>
  <%= @book.pages %>
</p>


<p>
  <strong>Price:</strong>
 <span style="color: green"><%= number_to_currency @book.price %></span>
</p>
<%= link_to 'Back', books_path %>
