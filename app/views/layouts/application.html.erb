<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title ? @page_title : 'Welcome'%> | Bookstore</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "landing-page.css" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'clean-blog.min', 'data-turbolinks-track': 'reload' %>

        <!-- Custom fonts for this template -->
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
  </head>
  <body>


    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
         <%= link_to "Bart's Bookstore" , root_path , {:class=>"navbar-brand js-scroll-trigger"}%>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href ="/books">Books</a>
            </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Edit profile', edit_user_registration_path, :class => "nav-link" %>
          </li>
          <li class ="nav-item">
          <%= link_to "Log Out", destroy_user_session_path, method: 'delete', :class => "nav-link" %>
          </li>
          <li class ="nav-item">
            <a class ="nav-link" href="/invoices">Order History</a>
          </li>
          <% else %>
          <li class ="nav-item">
          <%= link_to "Sign up", new_user_registration_path, :class => 'nav-link' %>
          </li>
          <li class ="nav-item">
          <%= link_to "Login", new_user_session_path, :class => 'nav-link' %>
          </li>
          <% end %>
          <% if current_user.try(:admin?) %>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin</a>
            </li>
          <% end %>
          <li class="nav-item">
            <%= render 'layouts/cart_text', {:class=>"nav-link"} %>
          </li>
          </ul>
        </div>
      </div>
    </nav>


 <section>
      <div class="container">
        <div class="row">
          <div class="col-md-8">
            <!-- Alerts & Messages -->
            <% if flash[:notice] %>
              <div class="alert alert-success"><%= flash[:notice] %></div>
            <% end %>

            <% if flash[:alert] %>
              <div class="alert alert-danger"><%= flash[:danger] %></div>
            <% end %>

            <%= yield %>
            
          </div>
          <div class="col-md-2">
            <%= render 'partials/sidebar' %>
        </div>
      </div>
    </div>
    </section>


    <!-- Footer -->
    <footer>
      <div class="container">
          <ul class="list-inline">
          <li class="list-inline-item">
             <%= link_to "Home", root_path %>
          </li>
          <li class="footer-menu-divider list-inline-item"></li>&sdot;
          <li class="list-inline-item">
            <%= link_to 'About', about_path , {:class=>"nav-link js-scroll-trigger"}%>
          </li>&sdot;
          <li class="footer-menu-divider list-inline-item"></li>
          <li class="list-inline-item">
              <a href ="/books">Books</a>
          </li>
          <li class="footer-menu-divider list-inline-item"></li>
        </ul>

        <p class="copyright text-muted small">Copyright &copy; Bart's Book Store 2017. All Rights Reserved</p>
        </div>
    </footer>



  </body>
</html>
